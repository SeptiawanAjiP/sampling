<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:text="Sampling"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alamat_server"

            android:text="Alamat Server"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/tv_alamat_server"
            android:id="@+id/alamart_server"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_var_id"
            android:text="Var Id"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/tv_var_id"
            android:id="@+id/var_id"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pilih Form Id"
            android:textSize="10dp"
            android:id="@+id/button_form_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_form_id"
            android:layout_toRightOf="@+id/button_form_id"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarik Sampel"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="@drawable/ico_rounded"
        android:layout_gravity="center"
        android:id="@+id/tv_tarik_sampel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/hasil_uuid"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Lihat Hasil Sampling"
        android:textColor="@color/white"
        android:padding="15dp"
        android:visibility="gone"
        android:id="@+id/hasil_sampling"
        android:background="@drawable/ico_rounded"
        android:layout_gravity="center"/>

</LinearLayout>