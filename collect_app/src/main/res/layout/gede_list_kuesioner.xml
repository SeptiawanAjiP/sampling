<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:id="@+id/card"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:id="@+id/rl_gambar">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:id="@+id/id_order"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:id="@+id/rl_judul_meetup">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Septiawan Aji P"
                    android:textSize="17dp"
                    android:id="@+id/nama_pemesan"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/nama_pemesan"
                    android:background="@drawable/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/rl_judul_meetup"
                android:id="@+id/rl_tanggal_meetup"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/jam_pesan"
                    android:text="Jam Pesan : 15.00"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/rl_tanggal_meetup"
                android:id="@+id/rl_tempat_meetup"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="081215749494"
                    android:textSize="12dp"
                    android:id="@+id/no_telp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/rl_tempat_meetup"
                android:id="@+id/rl_konfirmasi"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum dikonfirmasi"
                    android:textSize="12dp"
                    android:id="@+id/belum_konfirmasi"
                    android:textColor="#bf0c0c"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>